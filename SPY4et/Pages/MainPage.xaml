<Page x:Class="SPY4et.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SPY4et.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelloWorld">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
    
        <TabControl Margin="0, 5">
            <TabItem Header="Общее"
                     Name="TabMain"
                     IsSelected="True">
                <TabItem.Content>
                    <DataGrid Name="DtGrAll" 
                              Height="auto"
                              Width="auto" 
                              Grid.Row="0" 
                              CanUserAddRows="False"
                              Margin="10, 5, 10, 5"
                              AutoGenerateColumns="False"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              HorizontalAlignment="Center"
                              IsReadOnly="False">

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding Name}" 
                                        Header="Наименование"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding Serial}" 
                                        Header="Серийный номер"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding CostJa}" 
                                            Header="Цена (Юань)"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding CostRub}" 
                                            Header="Цена (рубль)"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding SelfCost}" 
                                            Header="Себестоимость"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding MarkrtCost}" 
                                            Header="Рыночная цена"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding WholeCost}" 
                                            Header="Оптовая цена"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding MarginWC}" 
                                            Header="Наценка опт"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding RetailCost}" 
                                            Header="Розничная цена"/>
                            <DataGridTextColumn Width="auto" 
                                                Binding="{Binding Count}" 
                                            Header="Кол-во на складе"/>
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem.Content>
            </TabItem>
